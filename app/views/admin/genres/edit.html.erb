<div class='container px-3 px-sm-3'>
  <font color="red">
    <% if @genre.errors.any? %>
      <%= @genre.errors.count %>error prohibited this obj from being saved:
        <% @genre.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
    <% end %>
  </font>
</div>

<div class='container px-3 px-sm-3'>
  <div class='row'>
    <div>

      <div class="container mb-4">
        <h4 style="background-color: #d3d3d3; display:inline;">　ジャンル編集　</h4>
      </div>

      <%= form_with model:@genre,url:"/admin/genres/#{@genre.id}", local:true do |f| %>
        <div>ジャンル名
          <span style="margin-left:50px"><%= f.text_field :name %></span>
          <span style="margin-left:50px"><%= f.submit '変更を保存', class: "btn btn-success" %></span>
        </div>
      <% end %>

    </div>
  </div>
</div>