<div class='container'>

  <h2>コンストラクション会員登録</h2>

  <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label 'ユーザー名' %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label 'メールアドレス' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions mt-4">
      <%= f.submit "新規会員登録",class: "btn btn-outline-success" %>
    </div>

    <br>

     <h4>会員登録がお済みの方</h4>
    <div>
    　<%= link_to "こちら", new_customer_session_path %>からログインを行ってください。
    </div>
  <% end %>

</div>
