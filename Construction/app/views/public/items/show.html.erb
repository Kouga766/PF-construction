<div class="mb-2 ">
    <center>
      <b>
      <%= form_with model: @item, url: admin_items_path, local:true do |f| %>
        <%= f.hidden_field :is_active %>
        <% if @item.is_active == "リアル系" %>
        <font size="5" color="green"><%= @item.is_active %></font>
        <%else%>
        <font size="5" color="blue"><%= @item.is_active %></font>
        <%end%>
      <%end%>
      </b>
    </center>
  </div>

<div class='container px-5 px-sm-0'>

  <div class='row'>




    <div class='col-md-4 mt-4'>

      <tr>
          <%= form_with model: @item, url: admin_items_path, local:true do |f| %>
          <%= f.hidden_field :is_active %>
          <% if @item.is_active == "リアル系" %>
          <%= attachment_image_tag(@item.image, :image, :size => '300x210', fallback: "default2.png") %>
          <%else%>
          <%= attachment_image_tag(@item.image, :image, :size => '300x210', fallback: "default.png") %>
          <%end%>
        <%end%>
      </tr>

    </div>



    <div class='col-md-6 offset-md-1'>

      <% if flash[:createdflag] == true then %>
      <p>You have created item successfully.</p>
      <% end %>



          <%= form_with model: @item, url: public_items_path, method: :post, local:true do |f| %>
          <%= f.hidden_field :item_id, :value => params[:id] %>
           <table width="700" height="100">
            <tr>
              <th><big><big>『<%= @item.name %>』</big></big></th>
            </tr>
           </table>

           <table width="700" height="300">
      
                  <tr>
                    <th><big><big>￥<%= @item.price.round.to_s(:delimited) %></big></big></th>
                  </tr>
      
              <tr>
                <td>プラモデル説明</td>
                <td><%= @item.description %></td>
              </tr>
      
              <tr>
                <td>ジャンル</td>
                <td type="button" class="btn btn-warning">
      
                <%= @item.genre.name if @item.genre.present? %>
                </td>
              </tr>
      
              <tr>
                <td>スケール</td>
                <td>1/<%= @item.scale%>スケール
                </td>
              </tr>
      
      
              <tr>
                <td noWrap>参考価格</td>
                <td noWrap><%= @item.price.to_s(:delimited)%>円
                </td>
              </tr>
      
              <tr>
                <td>発売日</td>
                <td><%= @item.sample_at %>
                </td>
              </tr>
      
                <%end%>
              </table>


    </div>
  </div>
</div>

<div class='container px-5 px-sm-0'>

  <div class='row'>

    <div class='col-md-4 mt-2'>
    カスタマーレビュー
    <tr class='mt-4'>
          <canvas id="myChart"></canvas>
          <script>
          var ctx = document.getElementById("myChart");
          var myChart = new Chart(ctx, {
          type: 'radar',
          data: {
          labels: ["つくりやすさ", "見栄え", "設定重視", "精密さ","値段設定"],
          datasets:
          [
          {
          label: '<%= @item.name %>へのユーザー評価',
          backgroundColor: 'rgba(102,255,129,0.2)',
          borderColor: 'rgba(122,255,129,0.2)',
          data: [4, 2, 2, 3, 5]
          }

          ]
          },
          options: {
          scale: {
          ticks: {
          suggestedMin: 0,
          suggestedMax: 5
          }
          }
          }
          });
          </script>
        </tr>

    </div>



    <div class='col-md-6 offset-md-1'>

      <% @reviews.each do |review| %>
      <table>


      <tr>
      <th class="p-3 mb-2 bg-light text-dark">レビュー</th>
      <th class="p-3 mb-2 bg-light text-dark" width="1000" ><%= review.name %></th>
      </tr>

      <tr>
      <td align="center">　内容：</td>
      <td width="1000" ><%= review.comment %></td>
      </tr>

      </table>

      <div><%= attachment_image_tag(review, :image, :size => '300x210') %></div>

      <% if review.customer_id == current_customer.id %>
      <div style="text-align: right"><%= link_to edit_public_item_review_path(id:review.id,item_id:@item.id),data: {"turbolinks" => false} do%>レビューを編集する。<% end %></div>
      <% end %>
      <% end %>

      <% if current_customer %>
      <div style="text-align: right">
      <%= form_with url: new_public_item_review_path(@item), method: :GET, local:true do |f| %>
      <%#= f.hidden_field :item_id, :value => @item.id %>
      <%= f.submit 'レビューする', class: "btn btn-success" %>
      <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>



  </div>
</div>