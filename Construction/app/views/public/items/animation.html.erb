<div class='container px-5 px-sm-0'>


  <div class="mb-4 ">
    <center>
      <b><font size="5" color="blue">アニメ・ゲーム系</font>
      <font size="5">プラモデル一覧</font></b>
      <font size="3">(全<%=@items.count %>件)</font>
    </center>
  </div>

    <div class="row">
      <% @items.each do |item| %>
        <div class="col-sm-3 mb-4">
          <%= link_to public_item_path(item.id) do %>
          <%= attachment_image_tag item, :image, :size => '150x100', fallback: "default.png" %>

            <div class="mb-2">

              <font size="2">
                <%= item.name %>
              </font>
            </div>


            <div class="mb-4">

              <font size="2">
                ￥<%= item.price.round.to_s(:delimited) %>
              </font>
            </div>





          <%end%>
        </div>
      <%end%>

        <div class="col-md-8 offset-md-1">
          <br><%= paginate @items %></br>
        </div>
    </div>
</div>