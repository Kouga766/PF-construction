<!DOCTYPE html>
<html class="h-100">
  <head>
    <title>プラモデル情報サイト‐Construction-</title>
    <%= favicon_link_tag 'icon1.png' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src=" https://cdn.jsdelivr.net/npm/chart.js@2.8.0/dist/Chart.min.js"></script>
  </head>

  <body class="h-100">
    <header class="border-bottom">
         <nav class="navbar navbar-expand-lg navbar-dark bg-white">
        <div class="container">
          <%= link_to root_path do %>
          <%= image_tag"Rogo.png",:size => '287x125' %>
          <% end %>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown" style="display:flex; flex-flow: column;">
            <div style="margin: 0 0 0 auto;">
            <ul class="navbar-nav ml-auto">

                <% if customer_signed_in? %>
                  <li>
                   <th>ようこそ、<%= current_customer.name %>さん！</th>
                  </li>

                 <li>
                    <%= link_to "新作カレンダー", public_calendars_path, class: "btn btn-outline-dark" %>
                  </li>
                  <li>
                    <%= link_to "質問箱", public_questions_path, class: "btn btn-outline-dark" %>
                  </li>
                  <li>
                    <%= link_to "プラモデル一覧", public_items_path, class: "btn btn-outline-dark" %>
                  </li>
                  <li>
                    <%= link_to "プラモデル一覧", public_items_path, class: "btn btn-outline-dark" %>
                  </li>
                  <li>
                    <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-outline-dark"%>
                  </li>
                <% elsif admin_signed_in? %>

                  <li>
                    <%= link_to "新作カレンダー", public_calendars_path, class: "btn btn-outline-dark" %>
                  </li>
                  <li>
                    <%= link_to "質問箱", public_questions_path, class: "btn btn-outline-dark" %>
                  </li>
                  <li>
                    <%= link_to "プラモデル一覧", admin_items_path, class: "btn btn-outline-dark" %>
                  </li>
                  <li>
                    <%= link_to "ジャンル一覧", admin_genres_path, class: "btn btn-outline-dark" %>
                  </li>
                  <li>
                    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-dark" %>
                  </li>

                <% else %>
                  <li>
                    <%= link_to "新作カレンダー", public_calendars_path, class: "btn btn-outline-dark" %>
                  </li>
                  <li>
                    <%= link_to "質問箱", public_questions_path, class: "btn btn-outline-dark" %>
                  </li>
                  <li>
                    <%= link_to "プラモデル一覧", public_items_path, class: "btn btn-outline-dark" %>
                  </li>
                  <li>
                    <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-dark" %>
                  </li>
                  <li>
                    <%= link_to "ログイン", new_customer_session_path, class: "btn btn-outline-dark" %>
                  </li>

              <% end %>
            </ul>
            </div>
            <% if admin_signed_in? %>
            <div style="margin: 0 0 0 auto;">
              <%= form_tag do %>
              <%= text_field_tag :search %>
              <%= submit_tag 'Search', :name => nil %>
            　<% end %>

            </div>
            <% end %>
          </div>
        </div>
      </nav>
    <p><%= notice %></p>
    </header>
    <main class="h-75">

    <%= yield %>
    </main>
    <footer>
     <div class="w-100 border border-primary-black">
     </div>
    </footer>
  </body>
  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p></p>
        </div>
      </div>
    </div>
  </footer>
</html>
